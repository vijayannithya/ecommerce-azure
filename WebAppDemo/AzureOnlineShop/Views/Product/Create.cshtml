@model AzureOnlineShop.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Produc</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form action="Create" method="POST">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                <label asp-for="product_name" class="control-label">Product Name:    </label>
                  @Html.TextBoxFor(model => model.product_name)
                <span asp-validation-for="product_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="category_id" class="control-label">Category:    </label>
                @Html.TextBoxFor(model => model.category_id)
                <span asp-validation-for="category_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label">Price:    </label>
                @Html.TextBoxFor(model => model.price)
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="qty" class="control-label">Qty:   </label>
                @Html.TextBoxFor(model => model.qty)
                <span asp-validation-for="qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a class="btn btn-primary" href="/Product/Index">Product Catalog</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
